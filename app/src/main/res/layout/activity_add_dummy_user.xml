<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.myqueue.myqueue.Activities.AddDummyUserActivity"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutActionBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <include
            layout="@layout/view_default_actionbar"/>/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/layoutProfile"
            android:onClick="true"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_alignParentTop="false"
                android:layout_alignParentRight="false"
                android:background="@drawable/shape_circle"
                android:id="@+id/relativeLayout3"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/profilePhoto"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentBottom="false"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="false" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KFC SETURAN"
                android:id="@+id/shopNametxt"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/layoutAddDummy"
            android:onClick="true"
            android:gravity="start"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="TOTAL QUEUE : -"
                    android:id="@+id/totalQueue"
                    android:textColor="@color/btnAddClick_normal"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_marginTop="90dp"
                    android:layout_marginBottom="90dp"/>
            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bookDummy"
                android:text="Book For Queue Number : -"
                android:background="@drawable/btnbookdummy_pressed"
                android:textColor="@color/white"
                android:visibility="visible"/>

        </LinearLayout>
</LinearLayout>
